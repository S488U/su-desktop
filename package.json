{
  "name": "plexaur",
  "productName": "Plexaur",
  "version": "1.2.1",
  "description": "Plexaur Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Shahabas Abdul Hameed <support@plexaur.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.shahabas.plexaur",
    "productName": "Plexaur",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "updateDialog.html",
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "icon": "assets/linux/icon.png",
      "category": "Utility",
      "desktop": {}
    },
    "win": {
      "target": "nsis",
      "icon": "assets/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/win/icon.ico",
      "uninstallerIcon": "assets/win/icon.ico",
      "uninstallDisplayName": "Uninstall Plexaur",
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/mac/icon.icns"
    }
  }
}
